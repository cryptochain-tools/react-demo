{
  "apps": [
    {
      "name": "demo-app",
      "script": "./index.js",
      "cwd": ".",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "env": {
        "NODE_ENV": "development",
        "PORT": 7002
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 7002
      },
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "./logs/error.log",
      "out_file": "./logs/out.log",
      "merge_logs": true
    }
  ]
}